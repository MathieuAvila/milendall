{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://milendall.com/schemas/bricks/simple_pad_provider/pad.json",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "translation": {
            "type": "array"
        },
        "rotation": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "axis": {
                    "type": "array"
                },
                "angle": {
                    "type": "number"
                }
            },
            "required": [ "axis" , "angle"]
        }
    }
}