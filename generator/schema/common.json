{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://milendall.com/schemas/common.json",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "lang": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": [
                    "lang",
                    "value"
                ]
            }
        },
        "definitions": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "src": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                }
            },
            "required": [
                "src"
            ]
        }
    }
}